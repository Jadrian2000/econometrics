##Prueba Breush-Pagan
#Paso 0 (Modelo)
modelo <- lm(formula = Y ~ X1 + X2, #X3, X4, etc
             data = datos)

#Paso 1 (Residuales al Cuadrado)
u2 <- resid(modelo)^2

#Paso 2 (RegresiÃ³n Auxiliar)
reg_auxiliar <- lm(formula = u2 ~  X1 + X2, #X3, X4, etc (mismas variables que paso 0, diferente Y)
                   data = base)

